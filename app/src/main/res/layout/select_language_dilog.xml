<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#374752">


    <!--<android.support.v7.widget.CardView
        android:id="@+id/cv_OfflineDataStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardBackgroundColor="#374752">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spn_SelectLanguage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:textColor="@color/colorHeader"
            android:textSize="25dp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_ChangeLanguage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/greenbg"
            android:gravity="center"
            android:text="Change Language"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->


    <ImageView
        android:id="@+id/ic_CloseDilog"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin20"
        android:src="@drawable/close" />

</FrameLayout>