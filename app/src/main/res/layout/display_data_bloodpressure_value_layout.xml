<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:id="@+id/mainLinearLayout"
    android:background="@drawable/under_line_border_layout"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="6.0"
        android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="6.0"
            android:orientation="vertical">

			<TextView
				android:id="@+id/disp_data_bp_value_textview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="value"
				android:layout_marginLeft="@dimen/dispdata_text_left_margin"
                android:textColor="@color/white"
				android:gravity="center"
				android:textStyle="bold"
                android:layout_gravity="center"
				android:textSize="@dimen/dispdata_text_size_l2" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="4.0"
            android:orientation="vertical">

			<TextView
				android:id="@+id/disp_data_bp_unit_textview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="unit"
                android:textColor="@color/white"
				android:gravity="left"
				android:textSize="@dimen/dispdata_text_size_s2" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4.0"
		android:visibility="visible"
        android:orientation="horizontal">

		<TextView
			android:id="@+id/disp_data_bp_title_textview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="title"
			android:layout_marginLeft="@dimen/dispdata_text_left_margin"
			android:textColor="@color/gray"
			android:textSize="@dimen/dispdata_text_size_m" />

	</LinearLayout>

</LinearLayout>
