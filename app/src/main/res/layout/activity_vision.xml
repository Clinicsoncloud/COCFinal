    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_header_height"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Height Scale"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_weight"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Weight Scale"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_pulseoximeter"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1.5"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Pulse Oximeter"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_bloodpressure"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="BP Monitor"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_tempreture"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Temperature"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_vision"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1"
            android:background="@color/orange4"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Vision"
            android:textColor="@color/white"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/tv_header_bloodsugar"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad5"
            android:layout_weight="1"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Blood Sugar"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_header_hemoglobin"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:layout_weight="1"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Hemoglobin"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:visibility="visible" />

    <include
        android:id="@+id/layout_result"
        layout="@layout/layout_vision_result"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7">

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/repeat"
                android:text="Finish"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7">

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/repeat"
                android:text="Skip"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>