<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:visibility="invisible"
    android:orientation="horizontal" >
    
    <TextView
		android:id="@+id/thermometer_value_textview"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="6.0"
		android:text="27"
		android:layout_marginLeft="@dimen/dispdata_text_left_margin"
		android:textColor="@android:color/black"
		android:gravity="bottom"
		android:textStyle="bold"
		android:textSize="@dimen/dispdata_text_size_l" />
    
    <TextView
        android:id="@+id/disp_data_thermometer_unit_textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.0"
        android:text="@string/thermometer_degree_unit_celsius"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/dispdata_text_left_margin"
        android:gravity="bottom"
        android:textSize="@dimen/dispdata_text_size_s2" />
    
</LinearLayout>
