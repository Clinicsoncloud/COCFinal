<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/background"
    tools:context=".heightweight.HeightScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_header_height"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@color/orange4"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Height Scale"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_weight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Weight Scale"
            android:textColor="@color/white"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/tv_header_tempreture"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Temperature"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_pulseoximeter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Pulse Oximeter"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_bloodpressure"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="BP Monitor"
            android:textColor="@color/white"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/tv_header_bloodsugar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Blood Sugar"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_header_hemoglobin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:background="@drawable/repeat"
            android:gravity="center"
            android:padding="@dimen/pad5"
            android:text="Hemoglobin"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad10"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="300dp"
            android:layout_weight="2"
            android:src="@mipmap/applogo"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <Spinner
                android:id="@+id/sp_devices"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.64" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/repeat"
                android:layout_weight="0"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_bluetooth_logs"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ellipsize="end"
                android:visibility="gone"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/et_manual_height"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:hint="Manual Height"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/rectangle"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/pad10"
            android:padding="@dimen/pad10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_temprature"
                android:layout_width="139dp"
                android:layout_marginStart="@dimen/margin20"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:visibility="gone"
                android:textColor="@color/white"
                android:ems="10" />

            <Button
                android:id="@+id/btn_get_height"
                android:background="@drawable/repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textAllCaps="false"
                android:text="Get Height" />

            <Button
                android:id="@+id/btn_clean"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/repeat"
                android:textSize="22sp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/margin20"
                android:text="Clean" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="700dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight=".6"
        android:background="@drawable/repeat"
        android:text="NEXT"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>