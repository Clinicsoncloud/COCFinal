<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.VisionFirstFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_left_vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/left_vision"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <RadioButton
        android:id="@+id/rb_left_vision_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/tv_left_vision"/>

    <ImageView
        android:layout_width="548dp"
        android:layout_height="503dp"
        android:layout_centerInParent="true"
        android:src="@drawable/svg_e_large_text"
        android:textScaleX="@android:integer/config_shortAnimTime"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_right_vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/right_vision"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <RadioButton
        android:id="@+id/rb_right_vision_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_below="@id/tv_right_vision"/>
</RelativeLayout>