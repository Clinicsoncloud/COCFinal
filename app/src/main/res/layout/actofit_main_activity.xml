<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtmainheight"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/repeat"
                    android:padding="@dimen/pad5"
                    android:text="Height Scale"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtmainweight"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/orange4"
                    android:padding="@dimen/pad5"
                    android:gravity="center"
                    android:text="Weight Scale"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_margin="@dimen/pad10" />


                <TextView
                    android:id="@+id/txtmaintempreture"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/repeat"
                    android:text="Temperature"
                    android:padding="@dimen/pad5"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtmainpulseoximeter"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Pulse Oximeter"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@drawable/repeat"
                    android:padding="@dimen/pad5"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtmainbloodpressure"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="BP Monitor"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@drawable/repeat"
                    android:padding="@dimen/pad5"
                    android:layout_margin="@dimen/pad10" />


                <TextView
                    android:id="@+id/txtmainbloodsugar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Blood Sugar"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@drawable/repeat"
                    android:padding="@dimen/pad5"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtmainhemoglobin"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hemoglobin"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@drawable/repeat"
                    android:padding="@dimen/pad5"
                    android:layout_margin="@dimen/pad10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle"
                    android:text="Name : Ashok Songara"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Age : 24"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtGender"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Gender : Male"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@drawable/rectangle"
                    android:layout_margin="@dimen/pad10" />

                <TextView
                    android:id="@+id/txtMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Phone : 7984507908"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@drawable/rectangle"
                    android:layout_margin="@dimen/pad10" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/pad10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="UserId"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteX="20dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/liner1_editpro1"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_edittext"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/txt_edtpro_name">

                    <EditText
                        android:id="@+id/txtuid"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="30sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txt_edtpro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="NAME"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteX="20dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/liner1_editpro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_edittext"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/txt_edtpro_name">

                    <EditText
                        android:id="@+id/txtuname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:inputType="textCapWords"
                        android:textSize="30sp" />
                </LinearLayout>


                <!--   <TextView
                       android:id="@+id/txt_edtpro_mobile"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:text="MOBILE NO. (optional)"
                       android:textColor="#111111"
                       android:textSize="16sp"
                       app:layout_constraintTop_toBottomOf="@+id/liner1_editpro"
                       app:layout_constraintLeft_toLeftOf="parent"
                       android:layout_marginLeft="20dp"
                       tools:layout_editor_absoluteX="20dp" />

                   <LinearLayout
                       xmlns:android="http://schemas.android.com/apk/res/android"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:background="@drawable/round_edittext"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"
                       android:layout_marginTop="5dp"
                       android:id="@+id/liner2_editpro"
                       app:layout_constraintTop_toBottomOf="@+id/txt_edtpro_mobile"

                       >
                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:id="@+id/txt_smobile"
                           android:background="@null"
                           android:inputType="number"
                           android:maxLength="10"

                           />
                   </LinearLayout>-->


                <TextView
                    android:id="@+id/txt_edtpro_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="GENDER"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteX="20dp" />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/liner10_editpro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <RadioGroup
                        android:id="@+id/rdogrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Male"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                    </RadioGroup>

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_edtpro_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="D.O.B"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteX="20dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/liner4_editpro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_edittext"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/txt_edtpro_dob"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/txt_sdob"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:drawableRight="@drawable/sdate"
                        android:gravity="center|left"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txt_edtpro_hight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="HEIGHT(cm)"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/liner4_editpro"
                    tools:layout_editor_absoluteX="20dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/liner5_editpro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_edittext"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/txt_edtpro_hight"
                    android:visibility="gone"
                    >

                    <EditText
                        android:id="@+id/txtuheight"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/black"
                        android:textSize="30sp" />
                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/liner6_amode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_edittext"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/txt_edtpro_hight"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Athlete Mode"
                        android:textColor="@color/black"
                        android:textSize="30sp" />


                    <Switch
                        android:id="@+id/switchbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="30sp"

                        />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/weightscale"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_btn_small"
                    android:text="Go To Smartscale"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@+id/liner5_editpro"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnrepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/repeat"
                        android:text="REPEAT"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnskip"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/repeat"
                        android:text="SKIP"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btnnext"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/repeat"
                        android:text="NEXT"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>