<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_header_height"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:text="Height"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_header_weight"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_header_pulseoximeter"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1.5"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:text="Pulse Oximeter"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_header_bloodpressure"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:text="BP Monitor"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_header_tempreture"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:text="Temperature"
                    android:textColor="@color/white"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tv_header_vision"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:padding="@dimen/pad5"
                    android:text="Vision"
                    android:textColor="@color/white"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tv_header_sugar"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat_orange"
                    android:gravity="center"
                    android:text="Sugar"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_header_hemoglobin"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad5"
                    android:layout_weight="1"
                    android:background="@drawable/repeat"
                    android:gravity="center"
                    android:text="Hemoglobin"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad10"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad10"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad10"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad10"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/layout_activity_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".glucose.GlucoseActivity">

                    <include
                        android:id="@+id/layout_toolbar"
                        layout="@layout/toolbar"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_log_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_toolbar"
                        android:layout_marginTop="@dimen/margin20"
                        android:gravity="center"
                        android:textColor="@color/orange4"
                        android:textSize="@dimen/textsize24"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_custom"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_below="@+id/tv_log_display"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tv_offline_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_custom"
                        android:layout_marginTop="@dimen/margin20"
                        android:gravity="center"
                        android:textColor="@color/orange4"
                        android:textSize="@dimen/textsize24"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_ConnectionStatusLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_custom"
                        android:layout_marginTop="@dimen/margin20"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_connection_status"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp"
                            android:layout_weight="0"
                            android:background="@drawable/blue_bg_container"
                            android:gravity="center"
                            android:text="Connecting..."
                            android:textColor="@color/white" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/layout_glucose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_ConnectionStatusLayout"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_readings_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/iv_glucose"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_margin="@dimen/pad10"
                                android:layout_weight=".6"
                                android:src="@drawable/glucoseicon"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/iv_steps"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_weight=".6"
                                android:visibility="gone" />

                            <include
                                android:id="@+id/layout_glucose_result"
                                layout="@layout/glucose_layout"
                                android:visibility="gone" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_reading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background"
                                android:scrollbars="vertical"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_connecting_steps_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="280dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/sync_png" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:text="@string/turn_on_glucose"
                                android:textColor="@color/white"
                                android:textSize="25sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_btnlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_glucose"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/pad10"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <Button
                                android:id="@+id/btn_start_test"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/grayback"
                                android:text="@string/starttest"
                                android:textColor="@color/white"
                                android:textSize="22sp" />

                            <Button
                                android:id="@+id/btn_skip"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/greenback"
                                android:text="Skip Test"
                                android:textColor="@color/white"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/margin20"
                            android:layout_marginBottom="50dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <Button
                                android:id="@+id/restartTest"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/greenback"
                                android:text="@string/restartTest"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/getData"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="@dimen/pad10"
                                android:layout_weight="1"
                                android:background="@drawable/greenback"
                                android:text="@string/getdata"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>


