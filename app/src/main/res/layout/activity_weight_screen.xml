<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="3"
    tools:context=".heightweight.HeightScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Height Scale"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:id="@+id/tv_header_weight"
            android:gravity="center"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Weight Scale"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/orange4"
            android:layout_gravity="center"
            android:id="@+id/tv_header_height"
            android:gravity="center"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Temperature"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_header_tempreture"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Pulse Oximeter"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_header_pulseoximeter"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Blood Pressure Monitor"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_header_bloodpressure"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Hemoglobin"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_header_hemoglobin"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Blood Sugar"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_header_bloodsugar"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Print"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/txtmainprinter"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Printer Setup"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/txtprintersetup"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="300dp"
            android:layout_margin="10dp"
            android:src="@mipmap/applogo"
            android:id="@+id/main"
            android:layout_alignParentRight="true"
            android:layout_marginRight="300dp" />

        <View
            android:layout_width="match_parent"
            android:background="@drawable/line"
            android:layout_below="@+id/main"
            android:layout_height="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/main"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="2"
            android:id="@+id/linearone"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="1"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:visibility="invisible"
                    android:id="@+id/thermostat"
                    android:src="@drawable/thermostat"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/height"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/layout_glucose"
            android:visibility="invisible"
            android:layout_below="@+id/lineartwo"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Weight"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:id="@+id/tv_weight"
                    android:background="@drawable/repeat"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Kg"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/lineartwo"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:visibility="invisible"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Height"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:id="@+id/txtheight"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:background="@drawable/repeat"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="cm"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/linearthree"
                android:layout_margin="10dp"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="BMI"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:id="@+id/tv_bmi"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:background="@drawable/repeat"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="-F"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:visibility="invisible"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@drawable/line"
            android:layout_below="@+id/linearfour"
            android:id="@+id/view1"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/linearfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearfive"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:background="@drawable/greenback"
                    android:gravity="center"
                    android:text="START"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/repeat"
                        android:text="REPEAT"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/repeat"
                        android:text="SKIP"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/repeat"
                        android:text="NEXT"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>